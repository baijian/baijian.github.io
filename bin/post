#!/bin/sh
binpath=$(cd `dirname $0`; pwd)
postpath="${binpath}/../_posts"
date=$(date +"%Y-%m-%d")
time=$(date +"%T")
postname="$date-$1.markdown"
filename=$postpath/$postname
touch $filename
echo "---
layout: post
title: \"$1\"
date: $date $time
comments: true
categories: 
---" > $filename
vim $filename
if [ $? -eq 0 ];then
    echo "\033[32;40mAdd post ${filename} Successful! \033[0m"
else
    echo "\033[31;40mTo add ${filename} Fail! \033[0m"
fi
